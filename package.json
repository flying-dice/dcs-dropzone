{
	"name": "dcs-dropzone",
	"version": "0.1.0",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"biome": "bun run --workspaces biome",
		"tsc": "bun run --workspaces tsc",
		"check": "bun run --workspaces check",
		"depcheck": "bun run --workspaces depcheck",
		"tests": "bun run --workspaces tests",
		"dev:webapp": "cd apps/webapp && bun run dev",
		"dev:daemon": "cd apps/daemon && bun run dev",
		"build:webapp": "bun run --filter webapp build"
	}
}
