{
	"name": "daemon",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"biome": "biome check --write",
		"tsc": "tsc --noEmit",
		"check": "bun run biome && bun run tsc && bunx depcheck",
		"dev": "bun --watch src/index.ts",
		"tests": "bun test --coverage",
		"build": "bun build-daemon.ts",
		"start": "docker compose up",
		"drizzle": "drizzle-kit generate --config drizzle.config.ts --name=init",
		"postdrizzle": "bun drizzle-migration.setup.ts"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.1",
		"@opentui/core": "^0.1.63",
		"@opentui/react": "^0.1.63",
		"@packages/hono": "workspace:*",
		"@packages/queue": "workspace:*",
		"@packages/decorators": "workspace:*",
		"@scalar/hono-api-reference": "^0.9.30",
		"@types/lodash": "^4.17.21",
		"date-fns": "^4.1.0",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.1",
		"fs-extra": "^11.3.3",
		"hono": "^4.11.1",
		"hono-openapi": "^1.1.2",
		"http-status-codes": "^2.3.0",
		"lodash": "^4.17.21",
		"log4js": "^6.9.1",
		"neverthrow": "^8.2.0",
		"object-hash": "^3.0.0",
		"react": "19.2.3",
		"ringbufferjs": "^2.0.0",
		"rxjs": "^7.8.2",
		"ts-pattern": "^5.9.0",
		"webapp": "workspace:*",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@types/bun": "1.3.3",
		"@types/fs-extra": "^11.0.4",
		"@types/object-hash": "^3.0.6",
		"@types/ringbufferjs": "^1.1.2"
	}
}
