{
	"name": "daemon",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"biome": "biome check --write",
		"tsc": "tsc --noEmit",
		"check": "bun run biome && bun run tsc",
		"dev": "bun --watch src/index.ts",
		"test": "bun test",
		"build": "bun build-daemon.ts",
		"start": "docker compose up",
		"drizzle": "drizzle-kit generate --config drizzle.config.ts --name=init",
		"postdrizzle": "bun drizzle-migration.setup.ts",
		"depcheck": "bunx depcheck"
	},
	"dependencies": {
		"@hono/standard-validator": "^0.2.0",
		"@scalar/hono-api-reference": "^0.9.26",
		"webapp": "workspace:*",
		"@packages/hono": "workspace:*",
		"@packages/zod": "workspace:*",
		"date-fns": "^4.1.0",
		"drizzle-kit": "^0.31.8",
		"drizzle-orm": "^0.45.0",
		"fs-extra": "^11.3.2",
		"hono": "^4.10.7",
		"hono-openapi": "^1.1.2",
		"http-status-codes": "^2.3.0",
		"log4js": "^6.9.1",
		"neverthrow": "^8.2.0",
		"zod": "^4.1.13"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.0",
		"@types/bun": "1.3.3",
		"@types/fs-extra": "^11.0.4"
	}
}
