{
	"name": "webapp",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"exports": {
		".": "./src/exports.ts"
	},
	"scripts": {
		"biome": "biome check --write",
		"tsc": "tsc --noEmit",
		"check": "bun run biome && bun run tsc",
		"dev": "AUTH_SERVICE_MOCK='{\"enabled\": true}' bun --hot src/index.ts",
		"test": "bun test",
		"clientgen": "bun run --bun orval --config orval.config.cjs",
		"build": "bun build ./src/index.ts --minify --sourcemap --compile --env='BUN_PUBLIC_*' --define:process.env.NODE_ENV='\"production\"' --outfile ./dist",
		"start": "docker compose up",
		"depcheck": "bunx depcheck"
	},
